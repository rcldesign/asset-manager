{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "node scripts/run-all-tests.js && npm run test:show",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --json --outputFile=test-results.json && npm run test:report",
    "test:unit": "jest --config jest.unit.config.ts",
    "test:unit:coverage": "jest --config jest.unit.config.ts --coverage --json --outputFile=test-results.json && npm run test:report",
    "test:unit:coverage:silent": "jest --config jest.unit.config.ts --coverage --coverageReporters=json-summary",
    "test:integration": "npm run test:db:start && npm run test:db:wait && npm run test:db:migrate && npm run test:integration:run",
    "test:integration:run": "jest --config jest.integration.config.ts --forceExit",
    "test:integration:coverage": "npm run test:db:start && npm run test:db:wait && npm run test:db:migrate && jest --config jest.integration.config.ts --coverage --json --outputFile=test-results.json --forceExit && npm run test:report",
    "test:integration:coverage:silent": "npm run test:db:start && npm run test:db:wait && npm run test:db:migrate && jest --config jest.integration.config.ts --coverage --coverageReporters=json-summary --forceExit",
    "test:e2e": "npm run test:db:start && npm run test:db:wait && npm run test:db:migrate && jest --config jest.integration.config.ts --testPathPattern=e2e --forceExit",
    "test:all": "jest",
    "test:all:coverage": "jest --coverage --json --outputFile=test-results.json",
    "test:report": "node scripts/test-reporter.js",
    "test:summary": "node scripts/test-all-with-report.js",
    "test:show": "node scripts/show-test-summary.js",
    "test:coverage:report": "jest --coverage --coverageReporters=json-summary --silent && npm run test:show",
    "test:db:check": "node scripts/check-test-db.js",
    "test:db:start": "(docker stop postgres-test 2>/dev/null || true) && (docker rm postgres-test 2>/dev/null || true) && docker run --name postgres-test -e POSTGRES_USER=testuser -e POSTGRES_PASSWORD=testpass -e POSTGRES_DB=asset_manager_test -p 5432:5432 -d postgres:15",
    "test:db:wait": "echo 'Waiting for test database...' && until docker exec postgres-test pg_isready -U testuser > /dev/null 2>&1; do sleep 1; done && sleep 2 && echo 'Database ready!'",
    "test:db:migrate": "DATABASE_URL=\"postgresql://testuser:testpass@localhost:5432/asset_manager_test?schema=public\" prisma migrate deploy",
    "test:db:stop": "docker stop postgres-test && docker rm postgres-test",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:format": "prisma format",
    "migrate": "tsx src/migrations/cli.ts migrate",
    "migrate:validate": "tsx src/migrations/cli.ts validate",
    "migrate:example": "tsx src/migrations/cli.ts example",
    "fix:tests": "ts-node scripts/fix-failing-tests.ts",
    "generate:mocks": "ts-node scripts/generate-mock-data.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@jest/globals": "^30.0.0-beta.3",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.19",
    "@types/crypto-js": "^4.2.2",
    "@types/date-fns": "^2.5.3",
    "@types/express": "^5.0.2",
    "@types/express-session": "^1.18.1",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^22.15.29",
    "@types/nodemailer": "^6.4.17",
    "@types/openid-client": "^3.1.6",
    "@types/pg": "^8.15.4",
    "@types/qrcode": "^1.5.5",
    "@types/rrule": "^2.1.7",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "jose": "^6.0.11",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript-eslint": "^8.33.1",
    "undici": "^7.10.0"
  },
  "dependencies": {

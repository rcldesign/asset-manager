# Test Environment Configuration
NODE_ENV=test

# Database - Using PostgreSQL for tests to match production
DATABASE_URL=postgresql://testuser:testpass@localhost:5432/asset_manager_test?schema=public

# JWT Configuration
JWT_SECRET=test-jwt-secret-32-characters-long
JWT_REFRESH_SECRET=test-refresh-secret-32-characters-long

# Encryption and Session
ENCRYPTION_KEY=test-32-byte-encryption-key-for-testing
SESSION_SECRET=test-session-secret-32-characters-long

# Redis Configuration
REDIS_URL=redis://localhost:6379/1
USE_EMBEDDED_REDIS=false

# OIDC Configuration (disabled for tests)
OIDC_ISSUER_URL=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_REDIRECT_URI=

# Logging
LOG_LEVEL=error

# Metrics
ENABLE_METRICS=false

# Security (disable rate limiting for tests)
DISABLE_RATE_LIMITING=true

# CORS - Allow localhost for tests
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001